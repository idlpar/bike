{
    "name": "tarpor/bike",
    "description": "Bike Point of Sale system developed by Tarpor. A web based POS system using PHP and MySQL with a simple user interface.",
    "license": "MIT",
    "authors": [
        {
            "name": "Tarpor Developers",
            "email": "support@tarpor.com"
        }
    ],
    "type": "project",
    "keywords": [
        "point-of-sale",
        "POS",
        "bike",
        "tarpor"
    ],
    "homepage": "https://tarpor.com",
    "support": {
        "issues": "https://tarpor.com/support",
        "wiki": "https://tarpor.com/docs/bike",
        "source": "https://github.com/tarpor/bike"
    },
    "require": {
        "ext-intl": "*",
        "php": "^8.1",
        "codeigniter4/framework": "4.6.2",
        "dompdf/dompdf": "^2.0.3",
        "ezyang/htmlpurifier": "^4.17",
        "laminas/laminas-escaper": "2.17.0",
        "paragonie/random_compat": "^2.0.21",
        "picqer/php-barcode-generator": "^2.4.0",
        "tamtamchik/namecase": "^3.0.0"
    },
    "require-dev": {
        "codeigniter/coding-standard": "^1.8",
        "fakerphp/faker": "^1.23.0",
        "friendsofphp/php-cs-fixer": "^3.47.1",
        "kint-php/kint": "^5.0.4",
        "mikey179/vfsstream": "^1.6",
        "nexusphp/cs-config": "^3.6",
        "phpunit/phpunit": "^10.5.16 || ^11.2",
        "predis/predis": "^1.1 || ^2.0"
    },
    "replace": {
        "psr/log": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Bike\\": "app/", 
            "CodeIgniter\\": "vendor/codeigniter4/framework/system/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    }
}
